<%if @plant%> 
<h1>Plant <%=@plant.nickname%>'s Page</h1>
Nickname: <%=@plant.nickname%> <br>
Plant Type: <%=@plant.plant_type%>
<%end%> 




<%if @plant.logs.present?%>
<h3>Care Logs:</h3>
<%@plant.logs.each do |log|%>
<ul><li>Water Date:<%=log.water_date%> Condition: <%=log.condition_update%> Notes: <%=log.notes%>
</li></ul>
<%end%><%end%><br>



<%=button_to 'Add Log', new_plant_log_path(@plant, @log), method: :get%>


<%=form_for(@plant) do |f|%>
<%=f.fields_for :logs, @plant.logs.build do |lf|%>
<%=lf.hidden_field :plant_id %>
<%=lf.label :water_date%>
<%=lf.date_field :water_date%>
<%=lf.label :notes%>
<%=lf.text_field :notes%>
<%=lf.label :condition_update%>
<%=lf.collection_select :condition_update, @conditions, :to_s, :to_s, {:selected => "No Change"}%>
<br><br> 


<%=lf.submit%>
<%end%>
<%end%>

<%if @plant.comments.present?%>
<h3>Comments:</h3>
<%@plant.comments.each do |comment|%><ul>
<%# <%=link_to comment.commenter.username, user_path(comment.commenter)%>
<li><%=comment.content%>
 </li> 
</ul><%end%><%else%>
<h3>No Comments Yet:</h3>
<%end%>

<%=button_to "Add A Comment", new_plant_comment_path(@plant, @comment), method: :get%>

<%= form_for([@plant, @comment]) do |f|%>
<%=f.fields_for :comments, @plant.comments.build do |cf|%> 
<%=cf.hidden_field :plant_id %>
<%=cf.hidden_field :commenter_id %>
<%=cf.label :content, 'Add a Comment:'%>
<%=cf.text_area :content %>
<%=cf.submit%>
<%end%><%end%><br>
<%=button_to 'Back to Owner', user_path(@plant.user), method: :get%>